@model Ogrenci
@{
    ViewData["Title"] = "EditStudent";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .bg-mor {
            background-color: #6f42c1; /* Mor rengi */
        }

        .btn-yesil {
            background-color: #28a745; /* Yeşil rengi */
            border-color: #28a745;
        }
    </style>
</head>
<body>

    <div class="container my-5">
        <div class="card shadow-lg">
            <div class="card-header bg-mor text-white">
                <h2 class="mb-0">Öğrenci Düzenleme İşlemi</h2>
            </div>
            <div class="card-body">
                <form asp-action="EditStudent" asp-controller="Student" method="post">
                    <input asp-for="Ogrenciid" type="hidden" />

                    <div class="form-group">
                        <label for="Ad">Ad</label>
                        <input asp-for="Ad" class="form-control" id="Ad" placeholder="Öğrenci Adı" />
                    </div>

                    <div class="form-group">
                        <label for="Soyad">Soyad</label>
                        <input asp-for="Soyad" class="form-control" id="Soyad" placeholder="Öğrenci Soyadı" />
                    </div>

                    <div class="form-group">
                        <label for="Numara">Numara</label>
                        <input asp-for="Numara" class="form-control" id="Numara" placeholder="Öğrenci Numarası" />
                    </div>

                    <div class="form-group text-center mt-4">
                        <button type="submit" class="btn btn-yesil btn-lg text-white">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
