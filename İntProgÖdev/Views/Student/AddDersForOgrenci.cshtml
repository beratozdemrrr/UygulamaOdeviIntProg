@model IEnumerable<İntProgÖdev.Models.Ders>
@{
    ViewData["Title"] = "Öğrenci İçin Ders Ekle";
    var studentId = ViewBag.StudentId;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container my-5">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Öğrenci İçin Ders Ekle</h2>
            </div>
            <div class="card-body">
                <form asp-action="AddDersForOgrenci" asp-controller="Student" method="post">
                    <input type="hidden" name="studentId" value="@studentId" />
                    <div class="form-group">
                        <label for="dersIds" class="form-label">Ders Seçin:</label>
                        <div class="row">
                            @foreach (var ders in Model)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <div class="form-check">
                                                <input type="checkbox" name="dersIds" value="@ders.Dersid" id="ders-@ders.Dersid" class="form-check-input" />
                                                <label for="ders-@ders.Dersid" class="form-check-label">@ders.DersAd</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="form-group text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
     <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
